            <!-- Key Skills -->
            <h3 class="text-xl font-semibold text-white mb-4">Key Skills</h3>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <!-- Core Skills -->
                <div class="bg-gray-800 rounded-lg p-4">
                    <h4 class="font-medium text-white mb-2">Core Skills</h4>
                    <ul class="text-gray-300 list-disc list-inside text-sm">
                        <li>Graphic Design</li>
                        <li>Digital Imaging</li>
                    </ul>
                </div>

                <!-- Intermediate -->
                <div class="bg-gray-800 rounded-lg p-4">
                    <h4 class="font-medium text-white mb-2">Intermediate</h4>
                    <ul class="text-gray-300 list-disc list-inside text-sm">
                        <li>UI/UX Design</li>
                        <li>Motion Graphic</li>
                    </ul>
                </div>

                <!-- Foundational -->
                <div class="bg-gray-800 rounded-lg p-4">
                    <h4 class="font-medium text-white mb-2">Foundational</h4>
                    <ul class="text-gray-300 list-disc list-inside text-sm">
                        <li>3D Animation</li>
                        <li>Video Editing</li>
                    </ul>
                </div>
            </div>
        </div>  
    </section>
</Layout>