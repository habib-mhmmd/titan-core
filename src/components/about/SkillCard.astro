---
// src/components/SkillCard.astro
export interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div class="bg-background-dark rounded-lg p-4">
  <h5 class="text-body-base mb-2">{title}</h5>
  <ul class="text-gray-300 list-disc list-inside font-medium text-small space-y-1 px-4">
    {skills.map((skill) => <li>{skill}</li>)}
  </ul>
</div>