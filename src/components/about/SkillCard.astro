---
// src/components/SkillCard.astro
export interface Props {
  title: string;
  skills: string[];
}

const { title, skills } = Astro.props;
---

<div class="bg-background-dark rounded-lg p-4">
  <p class="text-body-base font-semibold mb-2">{title}</p>
  <ul class="text-body-light list-disc list-inside font-medium text-small space-y-1 px-2">
    {skills.map((skill) => <li>{skill}</li>)}
  </ul>
</div>